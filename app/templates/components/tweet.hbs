<div class="tweet-wrapper row">
	<div>
		<img
			class="small-avatar"
			src="https://gcdn.emol.cl/mascotas/files/2018/03/perro-raro.jpg"
		/>
	</div>
	<div class="column tweet-content">
		<div class="row">
			<p class="user-name">
				{{if @data.userName @data.userName 'Pepe'}}
			</p>
			<span class="timestamp">{{@data.createdAt}}</span>
		</div>
		<div class="tweet-info">{{@data.description}}</div>
	</div>
</div>